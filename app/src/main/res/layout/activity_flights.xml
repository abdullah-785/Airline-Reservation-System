<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".flights">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dip"
        android:layout_marginTop="35dip"
        app:srcCompat="@drawable/ic_baseline_arrow_back_ios_24" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dip"
        android:layout_marginTop="30dip"
        android:layout_marginBottom="18dip"
        android:text="Flights"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="26dip"
        android:textStyle="bold" />


    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="110dip"
        android:background="@drawable/radius"
        android:backgroundTint="#089082">

        <RelativeLayout
            android:id="@+id/firstRelative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dip"
            android:layout_marginTop="90dip"
            android:background="@drawable/radius_four_side"
            android:paddingHorizontal="20dip"
            android:paddingVertical="10dip">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:text="From"
                android:textSize="16dip" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="5dip"
                android:text="To"
                android:textSize="16dip" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView3"
                android:textColor="#089082"
                android:textSize="20dip" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView5"
                android:layout_marginLeft="5dip"
                android:textColor="#089082"
                android:textSize="14dip" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_below="@id/textView3"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="50dp"
                android:layout_toRightOf="@id/textView5"
                android:scaleType="centerCrop"
                android:src="@drawable/emriteslogo" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView3"
                android:layout_alignParentRight="true"
                android:textColor="#089082"
                android:textSize="20dip" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView6"
                android:layout_alignParentRight="true"
                android:layout_marginStart="5dip"
                android:layout_marginTop="5dip"
                android:layout_marginEnd="5dip"
                android:layout_marginRight="10dip"
                android:layout_marginBottom="5dip"
                android:textColor="#089082"
                android:textSize="14dip" />


            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView7"
                android:layout_marginTop="40dip"
                android:text="Depart"
                android:textSize="16dip"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/editTextDate"
                android:layout_width="130dip"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView9"
                android:textColor="@color/black"
                android:textSize="18dip"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/timeRequired"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView9"
                android:layout_toRightOf="@id/editTextDate"
                android:textSize="16dip" />


            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView7"
                android:layout_alignParentRight="true"
                android:layout_marginTop="40dip"
                android:text="Flight No"
                android:textSize="16dip"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/departure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView13"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:textColor="@color/black"
                android:textSize="18dip"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/reachtodistinaciton"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/departure"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dip"
                android:scaleType="centerCrop"
                android:src="@drawable/reachtodistination" />


            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/reachtodistinaciton"
                android:layout_marginTop="30dip"
                android:textColor="@color/red"
                android:textSize="22dip"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/reachtodistinaciton"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="38dip"
                android:layout_toRightOf="@id/textView14"
                android:text="Ticket price"
                android:textSize="14dip" />


            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/reachtodistinaciton"
                android:layout_alignParentRight="true"
                android:layout_marginTop="36dip"
                android:text="View Detials"
                android:textColor="@color/red"
                android:textSize="18dip"
                android:textStyle="bold" />

        </RelativeLayout>

    </ScrollView>




</RelativeLayout>
