<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".confirmation">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dip"
        android:layout_marginTop="30dip"
        app:srcCompat="@drawable/ic_baseline_arrow_back_ios_24" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dip"
        android:layout_marginTop="26dip"
        android:layout_marginBottom="18dip"
        android:text="Confirmation"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="26dip"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="110dip"
        android:background="@drawable/radius"
        android:orientation="vertical"
        android:backgroundTint="#089082">


        <ImageView
            android:id="@+id/confirmaton"
            android:layout_marginTop="20dip"
            android:layout_width="wrap_content"
            android:layout_height="120dip"
            android:layout_gravity="center"
            app:srcCompat="@drawable/white_tick" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="35dip"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="Done" />


        <TextView
            android:id="@+id/textView20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="20dip"
            android:textStyle="bold"
            android:textColor="@color/halfwhite"
            android:text="Your ticket purches successfully" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="250dip"
            android:layout_marginHorizontal="20dip"
            app:srcCompat="@drawable/confirmationcard" />


        <Button android:id="@+id/more_tickets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="More Tickets"
            android:background="@drawable/radius_four_side"
            android:backgroundTint="@color/red"
            android:layout_marginTop="45dip"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginHorizontal="10dip"
            />



    </LinearLayout>


</RelativeLayout>
