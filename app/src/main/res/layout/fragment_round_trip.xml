<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="15dip"
    android:layout_marginTop="90dip"
    tools:context=".RoundTrip">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:text="From"
        android:textSize="16dip" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dip"
        android:text="To"
        android:textSize="16dip" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:text="Sydny"
        android:textColor="#089082"
        android:textSize="20dip" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_marginLeft="5dip"
        android:text="(SYD)"
        android:textSize="14dip" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_below="@id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/textView5"
        android:scaleType="centerCrop"
        android:src="@drawable/aroplan" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_alignParentRight="true"
        android:textColor="#089082"
        android:text="London"
        android:textSize="20dip" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_alignParentRight="true"
        android:layout_marginStart="5dip"
        android:layout_marginTop="5dip"
        android:layout_marginEnd="5dip"
        android:layout_marginRight="10dip"
        android:layout_marginBottom="5dip"
        android:text="(LON)"
        android:textSize="14dip" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="40dip"
        android:text="Depart"
        android:textSize="16dip"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextDate"
        android:layout_width="130dip"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView9"
        android:drawableLeft="@drawable/date_icon"
        android:ems="10"
        android:hint="12/26/2022"
        android:inputType="date" />

    <EditText
        android:id="@+id/editTextDate1"
        android:layout_width="130dip"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView8"
        android:layout_alignParentRight="true"
        android:layout_marginTop="55dip"
        android:drawableLeft="@drawable/date_icon"
        android:ems="10"
        android:hint="12/26/2022"
        android:inputType="date" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextDate"
        android:layout_marginTop="40dip"
        android:text="Passenger and Luggage"
        android:textSize="16dip"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/passenger"
        android:layout_width="80dip"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView10"
        android:drawableLeft="@drawable/family"
        android:drawablePadding="8dip"
        android:ems="10"
        android:hint="2"
        android:inputType="number" />

    <EditText
        android:id="@+id/kids"
        android:layout_width="80dip"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView10"
        android:layout_toRightOf="@id/passenger"
        android:drawableLeft="@drawable/kids"
        android:layout_marginLeft="25dip"
        android:drawablePadding="8dip"
        android:ems="10"
        android:hint="Kids"
        android:inputType="number" />

    <EditText
        android:id="@+id/KG"
        android:layout_width="80dip"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView10"
        android:layout_toRightOf="@id/kids"
        android:drawableLeft="@drawable/weight"
        android:drawablePadding="8dip"
        android:layout_marginLeft="25dip"
        android:ems="10"
        android:hint="KG"
        android:inputType="number" />


    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passenger"
        android:layout_marginTop="65dip"
        android:text="NonStop Flights"
        android:textSize="18dip"
        android:textStyle="bold" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/passenger"
        android:layout_alignParentRight="true"
        android:layout_marginTop="50dip"
        android:backgroundTint="@color/red"
        android:padding="20dip" />





</RelativeLayout>



